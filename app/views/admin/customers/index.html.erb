<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col">
      <div class="px-5 pt-5">
        <h4>会員一覧</h4>
      </div>
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>会員Id</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id), class: 'text-body' do %>
                  <u><%= customer.last_name %><%= customer.first_name %></u>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_customer_deleted == false  %>
                  <p class="text-success font-weight-bold">有効</p>
                <% elsif %>
                  <p class="text-muted">退会</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>