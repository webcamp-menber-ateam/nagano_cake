<div class="container px-5 px-sm-0">
  <%= flash[:notice] %>
  <div class="row">
    <div class="col">
      <div class="px-5 pt-5">
        <h4>注文履歴一覧</h4>
      </div>
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orderdetails.each do |orderdetail| %>
            <tr>
              <td><%= orderdetail.created_at %></td>
              <td><%= orderdetail.order.id %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>