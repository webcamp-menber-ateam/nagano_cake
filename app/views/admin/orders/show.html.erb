<div class="container px-5 px-sm-0">
  <%= flash[:notice] %>
  <div class="row">
    <div class="col">
      <div class="px-5 pt-5">
        <h4>注文履歴詳細</h4>
        <table class="table table-borderless">
          <tr>
            <td class="font-weight-bold" style= "width: 160px">購入者</td>
            <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">配送先</td>
            <td><%= @order.delivery_address %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= @order.delivery_name %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">注文ステータス</td>
              <%= form_with model: Order, url: admin_order_path(@order.id), method: :patch do |f| %>
                <td class="col-2">
                  <%= f.select :order_status, Order.order_statuses.keys.to_a, {}, class: 'form-control' %>:調整中
                </td>
                <td>
                  <%= f.submit "更新", class: 'btn btn-success' %>
                </td>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-9">
      <div class="px-5 pt-5">
        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @orderdetails.each do |detail| %>
              <tr>
                <td><%= detail.product.name %></td>
                <td><%= (detail.product.with_tax_price).to_s(:delimited) %></td>
                <td><%= detail.amount %></td>
                <td><%= (detail.subtoal).to_s(:delimited) %></td>
                  <%= form_with model: detail, url: admin_order_detail_path(detail.id), method: :patch do |f| %>
                    <td class="col-3">
                      <%= f.select :payment_method, OrderDetail.creat_statuses.keys.to_a, {}, class: 'form-control' %>:調整中
                    </td>
                    <td>
                      <%= f.submit "更新", class: 'btn btn-success'%>
                    </td>
                  <% end %>
                <% @total_price += detail.subtoal %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-3 align-self-end">
      <table class="table table-borderless">
        <tr>
          <td>商品合計</td>
          <td><%= @total_price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <td>請求合計金額</td>
          <td><%= @total_price + @order.postage %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>