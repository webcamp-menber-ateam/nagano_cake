<div class="container px-5 mx-auto">
  <div class="row">
    <div class="col-sm-12 px-5">
      <div class="px-5 pt-5">
        <h4>商品一覧</h4>
      </div>

      <table class="table">
        <thead class="table">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <th><%= product.id %></th>
              <th><%= link_to product.name, admin_product_path(product.id) %></th>
              <th><%= product.price%></th>
              <th><%= product.genre.name %></th>
              <th>
                <% if product.is_active == true %>
                  <P class="text-success">販売中
                <% else %>
                  販売中止中
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>