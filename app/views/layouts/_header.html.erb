<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><%= image_tag 'logo_image.png', size: "110x110" %></a>
        <!--顧客側ログイン-->
        <% if customer_signed_in? %>
        <span class="navbar-brand mb-0 h1">ようこそ、<%= current_customer.last_name %>さん!</span>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="mr-2">
              <%= link_to my_page_customers_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                マイページ
              <% end %>
            </li>
            <li class="mr-2">
              <%= link_to products_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                商品一覧
              <% end %>
            </li>
            <li class="mr-2">
              <%= link_to carts_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                カート
              <% end %>
            </li>
            <li class="mr-2">
              <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                ログアウト
              <% end %>
            </li>
          </ul>
        </div>

        <!--管理者側ログイン-->
        <% elsif admin_signed_in? %>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="mr-2">
              <%= link_to admin_products_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                商品一覧
              <% end %>
            </li>
            <li class="mr-2">
              <%= link_to admin_customers_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                会員一覧
              <% end %>
            </li>
            <li class="mr-2">
              <%= link_to admin_root_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                注文履歴一覧
              <% end %>
            </li>
            <li class="mr-2">
              <%= link_to admin_genres_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                ジャンル一覧
              <% end %>
            </li>
            <li class="mr-2">
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                ログアウト
              <% end %>
            </li>
          </ul>
        </div>

        <!--顧客・管理者側ログアウト-->
        <% else %>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="mr-2">
              <%= link_to about_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                About
              <% end %>
            </li>
            <li class="mr-2">
              <%= link_to products_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                商品一覧
              <% end %>
            </li>
            <li class="mr-2">
              <%= link_to new_customer_registration_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                新規登録
              <% end %>
            </li>
            <li class="mr-2">
              <%= link_to new_customer_session_path, class: 'nav-link text-dark btn btn-outline-secondary me-2' do %>
                ログイン
              <% end %>
            </li>
          </ul>
        </div>
        <% end %>

    </div>
  </nav>
</header>