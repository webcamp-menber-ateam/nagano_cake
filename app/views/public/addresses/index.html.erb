<div class="container px-sm-0">
  <h4>配送先登録/一覧</h4>

  <%= form_with model: @address, local: true do |f| %>
    <div class="form-group row">
      <div class="col-3">
        <%= f.label :"郵便番号(ハイフンなし)", class: 'ml-4 mt-4' %>
      </div>
      <div class="col-9">
        <%= f.text_field :postcode, :placeholder => "0000000", class: 'col-5 mt-4' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3">
        <%= f.label :"住所", class: 'ml-4 mt-1'%>
      </div>
      <div class="col-9">
        <%= f.text_area :postcode, :placeholder => "東京都",class: 'col-8 mt-1' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3">
        <%= f.label :"宛名", class: 'ml-4 mt-1'%>
      </div>
      <div class="col-9">
        <%= f.text_field :postcode, :placeholder => "0000000",class: 'col-5 mt-1' %>
      </div>
    </div>

    <div class="form-group text-right col-9">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<div class="table-responsive col-7 px-5 ml-5 mt-4">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>address</th>
      <th>address</th>
      <th>address</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td></td>
    </tr>
  </tbody>

</table>
</div>
