<div class="container">
  <div class="row">
    <div class="col-12 mt-4">
      <h5 class="col-4 text-center">マイページ</h5>

      <div class="col-12 mt-4 mb-3">
        <table>
          <tr>
            <td><h5>登録情報</h5></td>
            <td><%= link_to "編集する", information_edit_customers_path, class: "btn btn-sm btn-success px-4" %></td>
          </tr>
        </table>
      </div>

      <div class="col-8">
        <table class="table table-bordered">
          <tr class="w-20">
            <th scope="row">氏名</th>
            <td><%= @customer.last_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.last_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>

      <div class="col-12 mt-4">
        <table>
          <tr>
            <td><h5>配送先</h5></td>
            <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary px-4" %></td>
          </tr>
          <tr>
            <td><h5>注文経歴</h5></td>
            <td><%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary px-4" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>