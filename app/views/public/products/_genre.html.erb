<table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= link_to "全て", products_path %></td>
            </tr>
          <% genres.each do |genre| %>
            <tr>
              <td class="align-middle">
                <%= link_to products_path(genre_id: genre.id) do %>
                  <%= genre.name %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>