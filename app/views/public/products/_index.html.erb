        <%= link_to product_path(product.id) do %>
          <%= image_tag product.get_image(170, 120), class: 'img-fluid mb-2 mr-2' %>
        <% end %>
        <span class="mb-1 vw"><%= product.name %></span>
        <span class="">Â¥<%= product.price %></span>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate products %>
  </div>
</div>