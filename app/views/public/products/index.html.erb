<div class="container">
  <div class="row mt-5">
    <div class="col-md-3">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="align-middle">
                <%= genre.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-9">
      <h4 class="ml-1">商品一覧<span class="small"> (全<%= @products.count %>件)</span></h4>
      <%= render 'index', products: @products %>
    </div>
  </div>
</div>