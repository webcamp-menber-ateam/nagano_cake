<div class="container">
  <div class="row mt-5">
    <div class="col-md-3">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="align-middle"><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-9">
      <div class="row">
        <%= image_tag @product.get_image(180, 120), class: 'ml-md-3' %>
        <div class="col-6 ml-md-3">
          <h5 class="mb-1"><%= @product.name %></h5>
          <p class="my-4"><%= @product.explanation %></p>
          <p class="">¥ <%= @product.with_tax_price %><span class="smole"> (税込)</span></p>
          <div class="row">
            <%= form_with model: @cart do |f| %>
              <%= f.select :amount, [["1個", "1"], ["2個", "2"], ["3個", "3"]], include_blank: "個数選択" %>
              <%= f.submit "カートに入れる" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>